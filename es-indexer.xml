<?xml version="1.0" encoding="UTF-8"?>
<project name="es-indexer">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.temp.output.es-indexer:jar" value="${artifacts.temp.dir}/es_indexer_jar"/>
    <property name="artifact.output.es-indexer:jar" value="${basedir}/build/classes/artifacts"/>
    <property name="artifact.output.path" value="${artifact.temp.output.es-indexer:jar}"/>
    <property file="es-indexer.properties"/>

    <target name="remove-signatures">
    <exec executable="zip">
        <arg value="-d"/>
        <arg value="${artifact.output.path}/es-indexer.jar"/>
        <arg value="*.RSA"/>
        <arg value="*.SF"/>
        <arg value="*.DSA"/>
    </exec>
    </target>
</project>